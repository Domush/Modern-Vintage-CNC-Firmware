#!/usr/bin/env bash
#
# format_code [dir/file...]
#

HERE=`dirname $0`

while [[ $# -gt 0 ]]; do

  val="$1"

  if [ -d "$val" ]; then

    find $val -name *.cpp -exec "$HERE/uncrust" '{}' \;

  elif [ -d "./WRCNC/src/$val" ]; then

    find "./WRCNC/src/$val" -name *.cpp -exec "$HERE/uncrust" '{}' \;

  elif [ -f "./WRCNC/src/$val" ]; then

    uncrust "./WRCNC/src/$val"

  elif [ -f "$val" ]; then

    uncrust "$val"

  fi

done
